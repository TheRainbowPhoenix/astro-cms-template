{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      // @prefix = framework specific files (.astro)
      "@assets/*": ["src/assets/*"],
      "@content/*": ["src/content/*"],
      "@components/*": ["src/components/*"],
      "@cms/*": ["src/cms/*"],
      "@layouts/*": ["src/layouts/*"],
      // $prefix = JS files / lib
      "$lib/*": ["src/lib/*"], 
      "$helpers/*": ["src/helpers/*"]
    }
  }
}